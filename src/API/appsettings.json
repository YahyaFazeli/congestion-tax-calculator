{
  "$schema": "https://json.schemastore.org/appsettings.json",
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341",
          "batchPostingLimit": 100,
          "period": "00:00:02"
        }
      }
    ],
    "Enrich": ["FromLogContext"],
    "Properties": {
      "Application": "CongestionTaxCalculator"
    }
  },
  "ConnectionStrings": {
    "CongestionTaxDb": "Host=localhost;Port=5432;Database=CongestionTaxDb;Username=postgres;Password=YourStrong@Passw0rd"
  },
  "AllowedHosts": "*"
}
